
<!-- check values to call from schema -->

<h1>New Task</h1>

<div class="container">
	<%= form_for(@task) do |f| %>
	  <div class="form-group">
	    <h3><%= f.label :title %></h3>
	    <p><%= f.text_field :title, class: 'form-control' %></p>
	  </div>

	  <div class="form-group">
		<h3><%= f.label :details %></h3>
		<p><%= f.text_field :details, class: 'form-control' %></p>
	  </div>
	  
	  <%= f.submit class: 'btn btn-primary' %>
	<% end %>

	<h3><%= link_to "Back to list", tasks_path %></h3>
</div>
